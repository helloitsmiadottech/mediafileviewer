{
  "manifest_version": 3,
  "name": "File Type Detector",
  "version": "2.0.0",
  "description": "Detect the real file type of any URL and open it with the correct MIME type",
  "author": "mia",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.justice.gov/epstein/files",
    "https://www.justice.gov/epstein/files/*",
    "https://assets.getkino.com/documents/",
    "https://assets.getkino.com/documents/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.justice.gov/epstein/files",
        "https://www.justice.gov/epstein/files/*",
        "https://assets.getkino.com/documents/",
        "https://assets.getkino.com/documents/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
